---
pagination:
  data: sections
  size: 1  # Generate one file per section
  alias: section  # Alias for the current section in the template
permalink: false
# permalink: /markdown/{{ section.id | slugify }}-{{ section.title | slugify }}.md
---
---
id: "{{ section.id }}"
title: "{{ section.title }}"
{%- if section.series %}
series: "{{ section.series }}"
{%- endif %}
{%- if section.is_activity %}
is_activity: true
{%- endif %}
{%- if section.is_element %}
is_element: true
{%- endif %}
{%- if section.abbr %}
abbr: {{ section.abbr }}
{%- endif %}
heading_level: {{ section.document_depth }}
page_in_manual: {{ section.page_in_manual }}
---

{% if section.document_depth == 1 -%}
  # {{ section.id }} {{ section.title }}
{%- endif -%}
{%- if section.document_depth == 2 -%}
  ## {{ section.id }} {{ section.title }}
{%- endif -%}
{%- if section.document_depth == 3 -%}
  ### {{ section.id }} {{ section.title }}
{%- endif -%}
{%- if section.document_depth == 4 -%}
  #### {{ section.id }} {{ section.title }}
{%- endif -%}
